@{
    ViewData["Title"] = "Home Page";
}

    <style>
  

        .title {
            padding: 20px;
            background: #1DB954;
        }

        h1, h2 {
            margin: 10px 0;
        }

        .carousel {
            width: 80%;
            margin: 20px auto;
        }

            .carousel div {
                padding: 10px;
                background: #222;
                border-radius: 10px;
            }

            .carousel img {
                width: 100%;
                height: 300px;
                object-fit: cover;
                border-radius: 10px;
            }

            .carousel-indicators {
                display: contents;
            background-color: #222;
            }

        .song-info {
            margin-top: 40px;
            font-size: 18px;
        }

        #myCarousel {
            margin-bottom: 50px;
        }
    </style>
    <div class="title">
        <h1>Welcome to MusicApp</h1>
        <p>Your favorite music, anytime, anywhere.</p>
    </div>

    <section>
        <h2>Recommended Songs</h2>
    </section>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">

        <ol class="carousel-indicators mb-xxl-5 mt-xxl-5">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
        </ol>


        <div class="carousel-inner">
            <div class="item active">
                <img src="~/image/blinding_lights_1.jpg" alt="Blinding Lights">
                <p class="song-info"><strong>Blinding Lights</strong> - The Weeknd</p>
            </div>
            <div class="item">
                <img src="~/image/shape_of_you_1.jpg" alt="Shape of You">
                <p class="song-info"><strong>Shape of You</strong> - Ed Sheeran</p>
            </div>
            <div class="item">
                <img src="~/image/levitating_1.jpg" alt="Levitating">
                <p class="song-info"><strong>Levitating</strong> - Dua Lipa</p>
            </div>
            <div class="item">
                <img src="~/image/someone_like_you_1.jpg" alt="Someone Like You">
                <p class="song-info"><strong>Someone Like You</strong> - Adele</p>
            </div>
            <div class="item">
                <img src="~/image/bohemian_rhapsody_1.jpg" alt="Bohemian Rhapsody">
                <p class="song-info"><strong>Bohemian Rhapsody</strong> - Queen</p>
            </div>
        </div>


        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
