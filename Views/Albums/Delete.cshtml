@model Music_App.Models.Album

@{
    ViewData["Title"] = "Delete";
}

<head>
    <style>
        .form-wrapper {
            padding: 30px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form-container {
            background-color: #1DB954;
            padding: 30px;
            border-radius: 15px;
            width: 90%;
            max-width: 600px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
            color: white;
        }

        h2, h3 {
            text-align: center;
            color: white;
            margin-bottom: 20px;
        }

        .album-details dt {
            font-weight: bold;
            margin-top: 10px;
            color: white;
        }

        .album-details dd {
            margin-left: 0;
            margin-bottom: 10px;
            color: white;
        }

        .button-group {
            margin-top: 20px;
            display: flex;
            justify-content: space-between;
        }

        .btn-delete {
            padding: 10px 20px;
            background-color: #c0392b;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-delete:hover {
                background-color: #a93226;
            }

        .btn-back {
            padding: 10px 20px;
            background-color: #117a35;
            color: white;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            text-align: center;
        }

            .btn-back:hover {
                background-color: #0f5c27;
            }

            .album-details img { 
                border: 0; 
                 width: 80px; 
                height: auto;
            }

    </style>
</head>

<div class="form-wrapper">
    <div class="form-container">
        <h3>Are you sure you want to delete this album?</h3>

        <dl class="album-details">
            @* <dt>@Html.DisplayNameFor(model => model.ImageFile)</dt> *@

            <dd>
                <img src="@(Model.Image != null
                ? $"data:image/jpeg;base64,{Convert.ToBase64String(Model.Image)}"
                : Url.Content("~/images/default-artist.png"))"
                     alt="@Model.Title" />
            </dd>   
            <dt>@Html.DisplayNameFor(model => model.Title)</dt>
            <dd>@Html.DisplayFor(model => model.Title)</dd>

            <dt>@Html.DisplayNameFor(model => model.Duration)</dt>
            <dd>@Html.DisplayFor(model => model.Duration)</dd>

            

            <dt>@Html.DisplayNameFor(model => model.ReleaseDate)</dt>
            <dd>@Model.ReleaseDate.ToShortDateString()</dd>

            <dt>Artist</dt>
            <dd>@Model.Artist?.Name</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="button-group">
                <input type="submit" value="Delete" class="btn-delete" />
                <a asp-action="Index" class="btn-back">Back to List</a>
            </div>
        </form>
    </div>
</div>
