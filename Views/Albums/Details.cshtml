@model Music_App.Models.Album

@{
    ViewData["Title"] = "Album Details";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .details-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 30px;
        }

        .details-container {
            background-color: #1DB954;
            padding: 25px;
            border-radius: 15px;
            width: 90%;
            max-width: 600px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            color: white;
        }

        h2 {
            text-align: center;
            margin-bottom: 25px;
        }

        .details-item {
            margin-bottom: 15px;
        }

        .details-label {
            font-weight: bold;
            font-size: 18px;
            margin-bottom: 5px;
        }

        .details-value {
            font-size: 17px;
        }

        .album-image {
            display: block;
            margin: 0 auto 20px auto;
            width: 180px;
            height: 180px;
            object-fit: cover;
            border-radius: 10px;
            box-shadow: 0 0 8px rgba(0,0,0,0.3);
        }

        .button-container {
            text-align: center;
            margin-top: 25px;
        }

        .btn-style {
            padding: 10px 16px;
            background-color: #117a35;
            color: white;
            text-decoration: none;
            border-radius: 6px;
            margin: 0 10px;
        }

            .btn-style:hover {
                background-color: #0e5c2a;
            }
    </style>
</head>

<body>
    <div class="details-wrapper">
        <div class="details-container">
            <h2>Album Details</h2>

            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" class="card-img-top" alt="@Model.Title" style="height: 200px; object-fit: contain;" />

            <div class="details-item">
                <div class="details-label">Title</div>
                <div class="details-value">@Model.Title</div>
            </div>

            <div class="details-item">
                <div class="details-label">Duration</div>
                <div class="details-value">@Model.Duration</div>
            </div>

            <div class="details-item">
                <div class="details-label">Release Date</div>
                <div class="details-value">@Model.ReleaseDate.ToShortDateString()</div>
            </div>

            <div class="details-item">
                <div class="details-label">Artist</div>
                <div class="details-value">@Model.Artist?.Name</div>
            </div>

            <div class="button-container">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-style">Edit</a>
                <a asp-action="Index" class="btn-style">Back to List</a>
            </div>
        </div>
    </div>
</body>
