@using Music_App.DTOs
@model ArtistDTO

@{
    ViewData["Title"] = "Albums";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Name - Albums</title>
    <link rel="stylesheet" href="style.css">
    <style>
        body {
            background-color: #121212;
            color: white;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
        }

        .title-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 90%;
            max-width: 1000px;
            margin: 20px auto;
        }

        .title {
            font-size: 40px;
            color: white;
            text-decoration: none;
        }

        .add-album-button {
            padding: 8px 12px;
            background-color: #1DB954;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

            .add-album-button:hover {
                background-color: #169944;
            }

        .artist-details {
            background: #1DB954;
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 25px;
            width: 90%;
            text-align: center;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
            align-self: center;
        }


        .artist-header {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 20px;
        }

            .artist-header img {
                width: 250px;
                height: 250px;
                border-radius: 50%;
                object-fit: cover;
                border: 3px solid white;
                transition: transform 0.3s ease-in-out;
            }

                .artist-header img:hover {
                    transform: scale(1.1);
                }

        .artist-bio {
            font-size: 16px;
            margin-top: 10px;
        }

        table {
            width: 90%;
            /* max-width: 900px; */
            margin: 0 auto 40px;
            border-collapse: collapse;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0,0,0,0.3);
            background-color: #1e1e1e;
            margin-top: 20px;
            margin-left: 0px;
            align-self: center;
            padding: 25px;
        }

        thead {
            background-color: #2a2a2a;
        }

        th, td {
            padding: 12px 15px;
            text-align: center;
        }

        th {
            color: #1DB954;
            font-size: 16px;
            border-bottom: 2px solid #1DB954;
        }

        td {
            font-size: 14px;
            border-bottom: 1px solid #333;
        }

        tr:hover {
            background-color: #2e2e2e;
        }

        img {
            width: 60px;
            height: auto;
            border-radius: 5px;
        }

        .action-links a {
            margin: 0 5px;
            text-decoration: none;
            padding: 6px 10px;
            border-radius: 5px;
            background-color: #333;
            color: white;
            transition: background-color 0.2s;
        }

            .action-links a:hover {
                background-color: #555;
            }
    </style>
</head>

<div class="title-container">
    <h1 class="title">@Model.Name - Albums</h1>
    <a asp-area="" asp-controller="Home" asp-action="NewAlbum" class="add-album-button">
        <i class="fa-solid fa-plus"></i> Add New Album
    </a>
</div>

<div class="artist-details">
    <div class="artist-header">
        <img src="@(Model.ArtistImage != null
                ? $"data:image/jpeg;base64,{Convert.ToBase64String(Model.ArtistImage)}"
                : Url.Content("~/images/default-artist.png"))"
             alt="@Model.Name" />
    </div>
    <div class="artist-header">
        <h1>@Model.Name</h1>
    </div>
    <div class="artist-bio">
        <p>@Model.Description</p>
    </div>
</div>

@if (Model.Albums.Any())
{
    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Albums.First().Image)</th>
                <th>@Html.DisplayNameFor(model => model.Albums.First().Title)</th>
                <th>@Html.DisplayNameFor(model => model.Albums.First().Duration)</th>
                <th>@Html.DisplayNameFor(model => model.Albums.First().ReleaseDate)</th>
                <th>Artist</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Albums)
            {
                <tr>
                    <td>
                        <a asp-area="" asp-controller="Songs" asp-action="SongGroupByAlbum" asp-route-albumId="@item.Id">
                            <img src="@(item.Image != null
                                ? $"data:image/jpeg;base64,{Convert.ToBase64String(item.Image)}"
                                : Url.Content("~/images/default-artist.png"))"
                                 alt="@item.Title" />
                        </a>
                    </td>
                    <td>@item.Title</td>
                    <td>@item.Duration</td>
                    <td>@item.ReleaseDate.ToShortDateString()</td>
                    <td>@Model.Name</td>
                    <td class="action-links">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
