@model IEnumerable<Music_App.Models.Genre>

@{

    ViewData["Title"] = "Genres";

}

<style>
    .genres-title {
    color: white;
    font-size: 40px;
    text-align: center;
    margin-top: 30px;
    }

    .add-button-container {
    text-align: center;
    margin: 20px 0;
    }

    .add-button {
    background-color: #1db954;
    color: white;
    padding: 10px 20px;
    border: none;
    font-size: 16px;
    border-radius: 8px;
    text-decoration: none;
    transition: background-color 0.3s ease;
    }

    .add-button:hover {
    background-color: #159944;
    }

    .outer-green-box {
    background-color: #10b65c;
    padding: 40px;
    margin: 40px auto;
    width: 90%;
    max-width: 1000px;
    box-shadow: 0 0 20px rgba(0,0,0,0.5);
    border-radius: 20px;
    }

    .genre-table {
    width: 100%;
    border-collapse: collapse;
    background-color: white;
    border-radius: 10px;
    overflow: hidden;
    }

    .genre-table th, .genre-table td {
    padding: 15px;
    text-align: center;
    font-size: 16px;
    }

    .genre-table th {
    background-color: #2ecc71;
    color: white;
    }

    .genre-table tr:nth-child(even) {
    background-color: #f2f2f2;
    }

    .genre-actions a {
    margin-right: 10px;
    font-size: 14px;
    padding: 6px 10px;
    border-radius: 6px;
    text-decoration: none;
    color: white;
    transition: background-color 0.3s ease;
    }

    .genre-actions .edit {
    background-color: #007bff;
    }

    .genre-actions .details {
    background-color: #17a2b8;
    }

    .genre-actions .delete {
    background-color: #dc3545;
    }

    .genre-actions a:hover {
    opacity: 0.9;
    }

    .genre-badge {
    display: inline-block;
    background-color: #1db954;
    color: white;
    padding: 8px 16px;
    border-radius: 20px;
    font-weight: bold;
    font-size: 15px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    transition: transform 0.2s ease;
    }

    .genre-badge:hover {
    transform: scale(1.05);
    }

</style>

<div class="genres-title">Genres</div>

@if (User.IsInRole("admin"))
{
    <div class="add-button-container">
        <a asp-action="Create" class="add-button">+ Add New Genre</a>
    </div>
}

<div class="outer-green-box">
    <table class="genre-table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Type)</th>
                @if (User.IsInRole("admin"))
                {
                    <th>Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Songs" asp-action="SongsByGenre" asp-route-id="@item.Id" class="genre-badge">
                            @Html.DisplayFor(modelItem => item.Type)
                         </a>
                    </td>
                    @if (User.IsInRole("admin"))
                    {
                        <td class="genre-actions">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="edit">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="details">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="delete">Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
