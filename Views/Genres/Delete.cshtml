@model Music_App.Models.Genre

@{
    ViewData["Title"] = "Delete";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            background-color: #121212;
            color: white;
            font-family: Arial, sans-serif;
        }

        .delete-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 30px;
        }

        .delete-card {
            background-color: #1DB954;
            border-radius: 15px;
            padding: 30px;
            max-width: 500px;
            width: 90%;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            text-align: center;
        }

            .delete-card h2 {
                margin-bottom: 10px;
            }

            .delete-card p {
                font-size: 16px;
                margin-bottom: 10px;
            }

        .delete-actions {
            margin-top: 20px;
        }

            .delete-actions a {
                display: inline-block;
                margin: 0 10px;
                padding: 8px 16px;
                background-color: #169944;
                color: white;
                text-decoration: none;
                border-radius: 5px;
                font-size: 14px;
            }

                .delete-actions a:hover {
                    background-color: #117a35;
                }

            .delete-actions input[type="submit"] {
                padding: 8px 16px;
                background-color: #e53935;
                color: white;
                border: none;
                border-radius: 5px;
                font-size: 14px;
                cursor: pointer;
            }

                .delete-actions input[type="submit"]:hover {
                    background-color: #c62828;
                }
    </style>
</head>

<div class="delete-wrapper">
    <div class="delete-card">
        <h2>Delete Genre</h2>
        <p><strong>Are you sure you want to delete this genre?</strong></p>

        <div>
            <p><strong>Genre:</strong> @Model.Type</p>
        </div>

        <div class="delete-actions">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" />
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>
