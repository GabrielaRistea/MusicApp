<div id="playlistModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeModal()">✖</span>
        <h2>Create New Playlist</h2>
        <form id="createPlaylistForm" method="post" asp-action="Create" asp-controller="Playlists">
            <input type="text" name="Name" id="playlistName" placeholder="Enter playlist name" required />
            <input type="hidden" name="Duration" value="0:00" />
            <button type="submit">Save Playlist</button>
        </form>
    </div>
</div>

